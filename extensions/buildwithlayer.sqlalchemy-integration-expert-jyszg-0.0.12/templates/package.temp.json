{
  "name": "$CODEWL_EXTENSION_NAME",
  "displayName": "$CODEWL_DISPLAY_NAME",
  "publisher": "buildwithlayer",
  "description": "$CODEWL_DESCRIPTION",
  "icon": "./icon.png",
  "version": "$CODEWL_VERSION",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "AI",
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./dist/extension.js",
  "extensionDependencies": [
    "github.copilot-chat"
  ],
  "contributes": {
    "chatParticipants": [
      {
        "id": "$CODEWL_EXTENSION_NAME",
        "name": "$CODEWL_PARTICIPANT_NAME",
        "fullName": "$CODEWL_DISPLAY_NAME",
        "description": "$CODEWL_PARTICIPANT_DESCRIPTION",
        "isSticky": true,
        "commands": [
          {
            "name": "feedback",
            "description": "Give feedback on the product"
          }
        ]
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "$CODEWL_EXTENSION_NAME",
          "title": "$CODEWL_DISPLAY_NAME",
          "icon": "icon.png"
        }
      ]
    },
    "views": {
      "$CODEWL_EXTENSION_NAME" : [
        {
          "type": "webview",
          "id": "$CODEWL_EXTENSION_NAME.Webview",
          "name": "Webview",
          "when": "$CODEWL_EXTENSION_NAME.sidebarVisible == true"    
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "$CODEWL_EXTENSION_NAME.walkthrough",
        "title": "Getting started with $CODEWL_DISPLAY_NAME",
        "description": "This walkthrough will guide you through the features of $CODEWL_DISPLAY_NAME.",
        "steps": [
          {
            "id": "$CODEWL_EXTENSION_NAME.disableSidebarWalkthroughStep",
            "title": "Do you have a Github Copilot Subscription?",
            "description": "$CODEWL_DISPLAY_NAME offers an experience for those with and without a Github Copilot subscription, but we recommend the Copilot experience for those with an existing subscription.\n[Yes](command:$CODEWL_EXTENSION_NAME.disableSidebar)\n[No](command:$CODEWL_EXTENSION_NAME.enableSidebar)",
            "media": {"image": {"dark": "./media/copilot-logo-dark.svg", "light": "./media/copilot-logo-light.svg", "hc": "./media/copilot-logo-dark.svg", "hcLight": "./media/copilot-logo-light.svg"}, "altText": "GitHub Copilot Logo"},
            "completionEvents": ["onCommand:$CODEWL_EXTENSION_NAME.disableSidebar", "onCommand:$CODEWL_EXTENSION_NAME.enableSidebar"]
          },
          {
            "id": "$CODEWL_EXTENSION_NAME.copilotInstructionWalkthroughStep",
            "title": "Using the $CODEWL_DISPLAY_NAME Copilot Participant",
            "description": "You can activate the $CODEWL_DISPLAY_NAME Copilot Participant by @ mentioning the participant in a Copilot message (e.g., **``@$CODEWL_PARTICIPANT_NAME``** Your question).",
            "media": {"image": "./media/participant-tutorial.gif", "altText": "Copilot Participant Tutorial"},
            "when": "$CODEWL_EXTENSION_NAME.sidebarVisible == false"
          },
          {
            "id": "$CODEWL_EXTENSION_NAME.sidebarChatInstructionWalkthroughStep",
            "title": "Using the $CODEWL_DISPLAY_NAME Sidebar Chat",
            "description": "You can activate the $CODEWL_DISPLAY_NAME Sidebar Chat by clicking the $CODEWL_DISPLAY_NAME icon in the activity bar.",
            "media": {"markdown": "./media/sidebar-tutorial.md"},
            "when": "$CODEWL_EXTENSION_NAME.sidebarVisible == true"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "$CODEWL_EXTENSION_NAME.resetChat",
        "title": "Reset Chat",
        "icon": "restart_icon.png"
      },
      {
        "command": "$CODEWL_EXTENSION_NAME.disableSidebar",
        "title": "Disable Sidebar Chat"
      },
      {
        "command": "$CODEWL_EXTENSION_NAME.enableSidebar",
        "title": "Enable Sidebar Chat"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "$CODEWL_EXTENSION_NAME.resetChat",
          "when": "view == $CODEWL_EXTENSION_NAME.Webview",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "properties": {
        "$CODEWL_EXTENSION_NAME.sidebarChatDisabled": {
          "type": "boolean",
          "default": false,
          "description": "Disable the sidebar chat"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "fill": "node ./scripts/template.mjs",
    "zip": "node ./scripts/zip.mjs",
    "upload": "node ./scripts/upload.mjs"
  },
  "devDependencies": {
    "@google-cloud/storage": "^7.12.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "@vscode/test-cli": "^0.0.8",
    "@vscode/test-electron": "^2.3.9",
    "dotenv": "^16.4.5",
    "eslint": "^8.57.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.93.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {}
}